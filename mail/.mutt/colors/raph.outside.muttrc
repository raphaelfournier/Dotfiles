folder-hook CNAM/* color status black yellow
folder-hook RFS/* color status black red 
folder-hook Rfnet/* color status black blue
folder-hook CNAMnet/* color status black magenta

# black and white permutÃ©s ?
color normal     black default
color error      red default
#color message    white yellow
color message    black default
color markers    blue default
color tilde      green default # ~'s after message body
color signature  red default
color attachment white cyan  #Add-ons to the message
#color status     white red
color progress black red
color hdrdefault red black 

# index stuff
#color index      black yellow ~N # new messages
color index      black color220 ~N # new messages
color index      cyan default ~l # messages from list
color index      black cyan ~N~l # new messages from list
#color indicator  black green 
color indicator  color231 color34
color tree       magenta default

color index      cyan default "%f personal-lists"
color index      white cyan "~N %f personal-lists"
color index      cyan default "%f work-lists"
color index      white cyan "~N %f work-lists"


#color index      color144 default "(~d >10d ! ~Q ! ~l ! ~N)" # unreplied messages
#color index      color143 default "(~d >30d ! ~Q ! ~l ! ~N)" # unreplied messages
#color index      color142 default "(~d >60d ! ~Q ! ~l ! ~N)" # unreplied messages

color index      green default ~P # from me
color index      color244 default ~Q # replied messages
color index      red default ~F # flagged
color index      white black ~D # deleted
color index      white blue ~T # tagged

color header	yellow  color254  '^from:'
color header	yellow  color254  '^list-id:'
color header	cyan    color254  '^(to|cc|bcc):'
color header	red     color254  '^date:'
color header	green   color254  '^subject:'
color header  color31 color254  '^user-agent:'
color header	color29 color254  '^reply-to:'

color body    white red "\\*.*\\*"
color body    white green "_.*_"

# vim: filetype=muttrc
